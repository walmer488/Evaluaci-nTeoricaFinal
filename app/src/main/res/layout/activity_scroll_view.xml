<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScrollView">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/bananas"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4FF81"
                android:onClick="Seleccion"
                app:srcCompat="@drawable/bananas" />

            <ImageButton
                android:id="@+id/cerezas"
                android:background="#c51d34 "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="Seleccion"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/cerezas" />

            <ImageButton
                android:id="@+id/frambuesas"
                android:background="#E62C58 "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="Seleccion"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/frambuesas" />

            <ImageButton
                android:id="@+id/fresas"
                android:background="#d53032"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="Seleccion"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/fresas" />

            <ImageButton
                android:id="@+id/kiwis"
                android:background="#ABBA3B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="Seleccion"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/kiwis" />

            <ImageButton
                android:id="@+id/mangos"
                android:background="#ffcd48"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="Seleccion"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/mangos" />

            <ImageButton
                android:id="@+id/manzanas"
                android:background="#48e120"
                android:onClick="Seleccion"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/manzanas" />

            <ImageButton
                android:id="@+id/melon"
                android:background="#f4a900"
                android:onClick="Seleccion"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/melon" />

            <ImageButton
                android:id="@+id/naranjas"
                android:background="#ff8000"
                android:onClick="Seleccion"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/naranjas" />

            <ImageButton
                android:onClick="Seleccion"
                android:id="@+id/pera"
                android:background="#D1E231"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pera" />

            <ImageButton
                android:id="@+id/piÃ±a"
                android:onClick="Seleccion"
                android:layout_marginTop="10dp"
                android:background="#f4a900"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pina" />

            <ImageButton
                android:id="@+id/sandia"
                android:background="#FDBCB4"
                android:onClick="Seleccion"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/sandia" />

            <ImageButton
                android:background="#6F2DA8"
                android:onClick="Seleccion"
                android:id="@+id/uvas"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/uvas" />

            <ImageButton
                android:background="#252850"
                android:id="@+id/zarzamoras"
                android:onClick="Seleccion"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/zarzamora" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>